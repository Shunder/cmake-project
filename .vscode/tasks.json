{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake Configure",
      "type": "shell",
      "command": "cmake -S d:/Work/Code/hello -B d:/Work/Code/hello/output -G Ninja",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "CMake Build",
      "type": "shell",
      "command": "cmake --build d:/Work/Code/hello/output --config Debug --target all -j 64",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
      "dependsOn": [
        "CMake Configure"
      ]
    }
  ]
}
